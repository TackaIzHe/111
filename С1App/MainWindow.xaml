<Window x:Class="С1App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:С1App"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Login" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="login" Grid.Column="1" VerticalAlignment="Center" />

        <TextBlock Text="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="password" Grid.Column="1" VerticalAlignment="Center" Grid.Row="1" />

        <Button  Content="Login" Grid.Row="2" VerticalAlignment="Center" Margin="10,0,10,0" Click="loginAction"/>
        <Button  Content="Register" Grid.Row="2" VerticalAlignment="Center" Margin="10,0,10,0" Click="registerAction" Grid.Column="1"/>
    </Grid>
</Window>
